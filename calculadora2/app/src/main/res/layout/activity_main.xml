<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nieves.calculadora2.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cuentas"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            android:text="0"
            android:textSize="40sp" />
        <EditText
            android:id="@+id/result"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/cuentas"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result"
            android:layout_toRightOf="@+id/btn7"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result"
            android:layout_toRightOf="@+id/btn8"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn7"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn7"
            android:layout_toRightOf="@+id/btn7"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn7"
            android:layout_toRightOf="@+id/btn8"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn4"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn4"
            android:layout_toRightOf="@+id/btn7"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn4"
            android:layout_toRightOf="@+id/btn8"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result"
            android:layout_toRightOf="@+id/btn9"
            android:text="/"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDiv"
            android:layout_toRightOf="@+id/btn6"
            android:text="*"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMenos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMul"
            android:layout_toRightOf="@+id/btn3"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMas"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/btnMenos"
            android:layout_toEndOf="@+id/btn3"
            android:layout_toRightOf="@+id/btn3"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_toRightOf="@+id/btnC"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_toRightOf="@+id/btn0"
            android:text=","
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn0"
            android:layout_toEndOf="@+id/signo"
            android:layout_toRightOf="@+id/signo"
            android:text="="
            android:textSize="30sp" />

        <Button
            android:id="@+id/signo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnC"
            android:text="+/-"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnIgual"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="App Calculadora"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="italic" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
